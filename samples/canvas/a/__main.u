import a.canvas

class Handler(canvas.Handler) {
    new(cv) = {
        print('init with %r' % [cv])
        new()
    }
    def click(self, cv, x, y) = {
        print('click %r, %r' % [x, y])
        cv.fill_rect(x, y, 10, 10)
    }
    def mousemove(self, cv, x, y) {
        cv.fill_rect(x, y, 10, 10)
    }
    def keydown(self, cv, key, mods) {
        print('keydown %r %r' % [key, mods])
    }
}

print('before run')
canvas.run(
    title = 'canvas sample',
    handlercls = Handler,
)
