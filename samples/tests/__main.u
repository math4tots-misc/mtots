r###"

cls && export MTOTS_PATH="stdlib" && time cargo run -- samples/tests

"###
import os

def main() {
    root = __file.parent().canon()
    for [dirpath, _subdirs, filepaths] in os::walk(root.join("stdlib")) {
        for filepath in sorted(filepaths) {
            name = str(filepath.relpath(root)).rstrip('.u').replace(os::sep, '.')
            print(name)
            module = __import(name)
            keys = module.keys()
            if keys {
                for attr in keys {
                    attr_str = str(attr)
                    if attr_str.starts_with('__test_') {
                        print('  ' + attr_str)
                        module.get(attr)()
                    }
                }
            } else {
                print('  no tests')
            }
        }
    }
}

if __name == '__main' {
    main()
}
