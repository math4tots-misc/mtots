import a.ggez
import a.ggez.graphics as gg


ggez::run(
    init = nil,
    update = nil,
    draw = def {
        gg::clear([1, 1/2, 1])
    },
    text_input = def(ch) {
        print('text-input %r' % [ch])
    },
    mouse_down = def(x, y, btn) {
        print('mouse-down %r' % [[x, y, btn]])
    },
    mouse_wheel = def(x, y) {
        print('mouse-wheel %r' % [[x, y]])
    }
)
